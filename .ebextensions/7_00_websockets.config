# ==============================================
# AWS ELASTIC BEANSTALK - WEBSOCKETS CONFIG
# ==============================================
# Archivo: .ebextensions/00_websockets.config
# VERSIÓN CORREGIDA - Sin NodeCommand

files:
  "/etc/nginx/conf.d/websockets.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Mapeo de headers de WebSocket
      map $http_upgrade $connection_upgrade {
          default upgrade;
          '' close;
      }

      # Upstream para el servidor Node.js
      upstream nodejs {
          server 127.0.0.1:8081;
          keepalive 256;
      }

      server {
          listen 8080;
          
          # Configuración específica para Socket.IO
          location /socket.io/ {
              proxy_pass http://nodejs/socket.io/;
              proxy_http_version 1.1;
              
              # Headers necesarios para WebSocket
              proxy_set_header Upgrade $http_upgrade;
              proxy_set_header Connection $connection_upgrade;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
              
              # Timeouts para conexiones largas
              proxy_connect_timeout 7d;
              proxy_send_timeout 7d;
              proxy_read_timeout 7d;
              
              # Deshabilitar buffering para WebSockets
              proxy_buffering off;
              proxy_cache_bypass $http_upgrade;
          }

          # Configuración para rutas HTTP normales
          location / {
              proxy_pass http://nodejs;
              proxy_http_version 1.1;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }

          # Health check
          location /api/health {
              proxy_pass http://nodejs/api/health;
              proxy_http_version 1.1;
              access_log off;
          }
      }

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload || true"